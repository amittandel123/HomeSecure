<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="connect.home.homesecure.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:longClickable="true"
            android:onClick="onButtonClick"
            android:text="Device ON"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:onClick="onButtonClick"
            android:text="Device OFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:longClickable="true"
            android:onClick="onButtonClick"
            android:text="Alarm ON"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:onClick="onButtonClick"
            android:text="Alarm OFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:longClickable="true"
            android:onClick="onButtonClick"
            android:text="Arm"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:onClick="onButtonClick"
            android:text="Disarm"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:longClickable="true"
            android:onClick="onButtonClick"
            android:text="Auto Alarm"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:onClick="onButtonClick"
            android:text="Resest Auto"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button9"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:longClickable="true"
            android:onClick="onButtonClick"
            android:text="User 1"

            android:textSize="20dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg1"
            android:onClick="onButtonClick"

            android:text="User 2"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_bg1"
        android:onClick="onButtonClick"
        android:text="Lock Status"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
