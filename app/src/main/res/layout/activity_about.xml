<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Rel_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/home" />

    <TextView
        android:id="@+id/tvCH"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="Connected Home"
        android:textAlignment="center"
        android:textColor="@color/accent_material_light"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPurpose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCH"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="Transforming Living Experiences"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageQR"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvPurpose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/qr" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageQR"
        android:layout_centerHorizontal="true"
        android:text="Know More about our products"
        android:textAlignment="center" />
</RelativeLayout>
